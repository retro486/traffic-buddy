<?xml version='1.0' encoding='utf-8'?>
<widget id="us.rdkl.trafficbuddy" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="wp-package" value="Device" />
    </feature>
    <feature name="Vibration">
        <param name="wp-package" value="Vibration" />
    </feature>
    <feature name="Console">
        <param name="wp-package" value="DebugConsole" />
    </feature>
    <feature name="File">
        <param name="wp-package" value="File" />
    </feature>
    <feature name="AdMob">
        <param name="wp-package" value="AdMobPlugin" />
    </feature>
    <name>Traffic Buddy</name>
    <description>
        A quick traffic spotter that doesn't use GPS.
    </description>
    <author email="info@rdkl.us" href="http://rdkl.us">
        Rdkl.us
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="www/img/logo.png" />
</widget>
